<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="tit.backend.web.ticket.TicketBrowse"
        focusComponent="ticketsTable"
        lookupComponent="ticketsTable"
        messagesPack="tit.backend.web.ticket">
    <dsContext>
        <collectionDatasource id="ticketsDs"
                              class="tit.backend.entity.Ticket"
                              view="ticketWithAssignee">
            <query>
                <![CDATA[select e from tit$Ticket e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="ticketsTable"
            spacing="true">
        <filter id="filter"
                applyTo="ticketsTable"
                datasource="ticketsDs">
            <properties include=".*"/>
        </filter>
        <table id="ticketsTable"
               width="100%">
            <actions>
                <action id="create"
                        openType="NEW_TAB"/>
                <action id="edit"
                        openType="NEW_TAB"/>
                <action id="remove"/>
                <action id="refresh"/>
            </actions>
            <columns>
                <column id="createTs"/>
                <column id="id"/>
                <column id="subject"/>
                <column id="state"/>
                <column id="category"/>
                <column id="assignee"/>
                <column id="plannedDate"/>
                <column id="closedDate"/>
                <column id="address"/>
                <column id="createdBy"/>
                <column id="emergency"/>
                <column id="prioritised"/>
            </columns>
            <rows datasource="ticketsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="ticketsTable.create"/>
                <button id="editBtn"
                        action="ticketsTable.edit"/>
                <button id="removeBtn"
                        action="ticketsTable.remove"/>
                <button id="refreshBtn"
                        action="ticketsTable.refresh"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
